<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageViewActivity">

    <ImageView
        android:id="@+id/image_viewer"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:src="@drawable/crop_image_menu_flip">

    </ImageView>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_viewer"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Filter:"
            android:textSize = "20dp" />

        <Button
            android:id="@+id/download_buton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download Image"></Button>

    </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linear"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/txtView"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/orginal_filter"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </ImageView>

            <ImageView
                android:id="@+id/blur_filter"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </ImageView>

                <ImageView
                    android:id="@+id/grayscale_filter"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </ImageView>

            <ImageView
                android:id="@+id/color_red_filter"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </ImageView>



                <ImageView
                    android:id="@+id/blue_filter"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </ImageView>

                <ImageView
                    android:id="@+id/green_filter"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </ImageView>

                <ImageView
                    android:id="@+id/black_filter"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </ImageView>

                <ImageView
                    android:id="@+id/white_filter"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </ImageView>

            </LinearLayout>

        </HorizontalScrollView>





</RelativeLayout>