<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/login_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/wp1"
                android:scaleType="fitCenter">

            </ImageView>

            <EditText
                android:id="@+id/login_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_image"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="17dp"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:hint="Email..."
                android:inputType="textEmailAddress"
                android:padding="4dp"
                android:textColorHighlight="#378CCD"
                android:textColorLink="#378CCD">

            </EditText>

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_mail"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17dp"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:hint="Password..."
                android:inputType="textPassword"
                android:padding="4dp"
                android:textColorHighlight="#378CCD"
                android:textColorLink="#378CCD">

            </EditText>

            <Button
                android:id="@+id/login_buton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_password"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/rounded_btn"
                android:padding="4dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="24sp"
                >


            </Button>
            <TextView
                android:id="@+id/new_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@id/login_buton"
                android:text="New Account ? "
                android:layout_marginTop="2dp"
                android:background="@drawable/rounded_white_btn"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="23dp"
                android:textSize="21sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:id="@+id/login_with_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@id/new_account"
                android:text="Or Login using your "
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="23dp"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold">

            </TextView>

            <Button
                android:id="@+id/phone_login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_with_phone"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="120dp"
                android:background="@drawable/rounded_btn"
                android:padding="4dp"
                android:text="Phone"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="20sp"
                android:drawableLeft="@drawable/phone"
                />




        </RelativeLayout>


    </ScrollView>

</RelativeLayout>